<div class="container">
  <h2>Add a new rating for <%= @restaurant.name %></h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating %>
    <%= f.input :content %>
    <%= f.submit %>
  <% end %>
  <p><%= link_to "Back to restaurant", restaurant_path(@restaurant) %></p>
</div>
